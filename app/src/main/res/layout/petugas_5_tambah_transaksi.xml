<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.petugas.siswa.TambahTransaksi">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:paddingTop="30dp"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/textView5"
                style="@style/SPPKelompok2.Text.Semibold.Header3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Transaksi"
                android:textColor="?colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5">

                <TextView
                    style="@style/SPPKelompok2.Text.Semibold.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tgl. Bayar" />

                <TextView
                    android:id="@+id/tglBayar"
                    style="@style/SPPKelompok2.Text.Medium.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_edit_text"
                    android:clickable="true"
                    android:focusable="true"
                    android:hint="Tgl. Bayar"
                    android:inputType="none"
                    android:textColor="?colorPrimary"
                    app:drawableEndCompat="@drawable/icon_arrow_down" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
                app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                <TextView
                    style="@style/SPPKelompok2.Text.Semibold.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPP" />

                <Spinner
                    android:id="@+id/spp"
                    style="@style/SPPKelompok2.Text.Medium.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_spinner"
                    android:clickable="true"
                    android:focusable="true"
                    android:maxLength="11"
                    android:popupBackground="@drawable/background_edit_focused"
                    android:textColor="?colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
                app:layout_constraintStart_toStartOf="@+id/linearLayout3"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <TextView
                    style="@style/SPPKelompok2.Text.Semibold.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPP Tahun-Bulan" />

                <TextView
                    android:id="@+id/sppBulanTahun"
                    style="@style/SPPKelompok2.Text.Medium.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edit_unfocused"
                    android:clickable="false"
                    android:focusable="false"
                    android:hint="SPP Tahun-Bulan"
                    android:inputType="none"
                    android:textColor="?colorPrimary"
                    app:drawableEndCompat="@drawable/icon_arrow_down" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
                app:layout_constraintStart_toStartOf="@+id/linearLayout4"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                <TextView
                    style="@style/SPPKelompok2.Text.Semibold.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Bayar" />

                <EditText
                    android:id="@+id/jumlahBayar"
                    style="@style/SPPKelompok2.Text.Medium.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_edit_text"
                    android:clickable="true"
                    android:focusable="true"
                    android:hint="Jumlah Bayar"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="?colorPrimary" />

            </LinearLayout>

            <Button
                android:id="@+id/simpan"
                style="@style/SPPKelompok2.Button.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="220dp"
                android:clickable="true"
                android:focusable="true"
                android:text="SIMPAN"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
                app:layout_constraintVertical_bias="0.9" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>