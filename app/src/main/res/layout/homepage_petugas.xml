<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/header"
                    android:layout_width="288dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="34dp"
                    android:background="#00000000"
                    android:text="Hai, Wahyuningsih!"
                    android:textColor="#FF0000"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp" />
                android:src="@drawable/Logout"
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loginLayout"
            android:layout_width="336dp"
            android:layout_height="122dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/dashboard"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dp">


            <ImageButton
                android:id="@+id/datakelas"
                android:layout_width="79dp"
                android:layout_height="62dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/datakelas" />

            <ImageButton
                android:id="@+id/histori"
                android:layout_width="48dp"
                android:layout_height="62dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/histori" />


            <ImageButton
                android:id="@+id/inputdata"
                android:layout_width="79dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/datasiswa" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:text="Total SPP"
                android:textColor="#3D3E49"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="34dp"
                    android:text="Lihat Semua"
                    android:textColor="#9E9FA4" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bg"
            android:layout_width="353dp"
            android:layout_height="139dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bgijo"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Total SPP Oktober"
                    android:textColor="#FEFEFE"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Klik untuk detailnya"
                    android:textColor="#FEFEFE"
                    android:textSize="10sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/frame"
                    android:layout_width="108dp"
                    android:layout_height="43dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/putih" />

                <TextView
                    android:id="@+id/nominal"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="11dp"
                    android:text="Rp. 500.000"
                    android:textColor="#01C370"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:text="Aktivitas"
                android:textColor="#3D3E49"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="34dp"
                    android:text="Lihat Semua"
                    android:textColor="#9E9FA4" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardPutih"
            android:layout_width="305dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/putihaja"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/nama_siswa"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Rizal Kurniawan"
                    android:textColor="#3D3E49"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/kelas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XII RPL 3 •"
                        android:textColor="#3D3E49"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="Lunas"
                        android:textColor="#01C370"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/nominalkurang"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:text="Rp. 500.000"
                android:textColor="#3D3E49"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardPutih2"
            android:layout_width="305dp"
            android:layout_height="76dp"
            android:layout_gravity="center"
            android:background="@drawable/putihaja"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/nama_siswa2"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Agus Susantoso"
                    android:textColor="#3D3E49"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/kelas2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XII RPL 5 •"
                        android:textColor="#3D3E49"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/status2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="Belum Lunas"
                        android:textColor="#FF9900"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/nominalkurang2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:text="Rp. 200.000"
                android:textColor="#3D3E49"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardPutih3"
            android:layout_width="305dp"
            android:layout_height="76dp"
            android:layout_gravity="center"
            android:background="@drawable/putihaja"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/nama_siswa3"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Ilma Kurniawati"
                    android:textColor="#3D3E49"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/kelas3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XII RPL 1 •"
                        android:textColor="#3D3E49"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/status3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="Lunas"
                        android:textColor="#01C370"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/nominalkurang3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:text="Rp. 500.000"
                android:textColor="#3D3E49"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
